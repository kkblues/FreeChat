    <button class="btn btn-info align-content-center" id="hideShowInfoButton">Hide Infos</button>
    <button class="btn btn-warning align-content-center  " id="leaveRoomBtn">Exit Room</button>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#fullHeightModalRight">
        Room Infos
    </button>

    <div class="row" id="chatEngineMiddle">
        <div class="col-lg-10" id="messagesContainerArea">
            <div id="messagesArea">
                <ul class="inner-list"></ul>
            </div>
        </div>
        <div class="col-lg-2" id="onlineUsersContainer">
            <div class="member_list ">
                <div class="card">
                    <div class="card-block text-center">
                        <h5>Online Users</h5>
                    </div>
                </div>
                <ul id="list-onlineUsers" class="list-group"></ul>
            </div>
        </div>
    </div>
    <div class="row" id="chatEngineFooterContainer">
        <div class="col-lg-10" id="chatEngineFooter">
            <div class="message_write">
                <textarea class="form-control" placeholder="type a message" id="messageTyped"></textarea>
                <button class="pull-right btn btn-success col-md-1" id="send">Send</button>
            </div>
        </div>
        <div class="col-lg-2">

        </div>
    </div>
</div>

<div class="modal fade top" id="fullHeightModalRight" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-full-height modal-top" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul class="list-group" id="roomsInfo">
                    <li class="list-group-item"><strong>Name</strong>&nbsp;&nbsp;@Model.Name <br /><strong>Description</strong>&nbsp;&nbsp;@Model.Description<br /><strong>Genre</strong>&nbsp;&nbsp;@Model.Genre</li>
                </ul>
                <ul class="list-group " id="roomsInfo2">
                    <li class="list-group-item"><strong>Date</strong>&nbsp;&nbsp;@DateTime.Now<br /> <strong>Expiring</strong>&nbsp;&nbsp;@Model.ExpirationDate  <br /><strong>Created</strong>&nbsp;&nbsp;@Model.CreatedDate</li>
                </ul>
                
                <ul class="list-group" id="roomsInfo3">
                    <li class="list-group-item text-center" id="usersConnected"><strong>Users Connected</strong><div class="text-center"><h1><a href="#">1</a></h1> </div></li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>


@section scripts{
    @Scripts.Render("~/bundles/ChatEngineView")
    <script src="/signalr/hubs"></script>

    <script type="text/javascript">
        $(function () {

            ChatEngineController.Init({
                RoomName:"@Model.Name.ToString()"
            });
        });
    </script>

}
