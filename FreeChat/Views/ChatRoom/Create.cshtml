@model FreeChat.Models.ViewModels.CreateRoomViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminTemplate.cshtml";
}

@Styles.Render("/bundles/ChatRoomViewStyle")

<h4>
    Want to chat ?<br>
    Create the chat room you want
</h4><br />


<div id="form">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id ="createRoomForm" }))
    {
        <p class="alert alert-info">All fields are <strong>required</strong>.</p>
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.MainCategories)
            @Html.DropDownListFor(m => m.MainCategories, new SelectList(Model.MainCategories, "Id", "Name"), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.MainCategories)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Topic.Name)
            @Html.TextBoxFor(m => m.Topic.Name, new { @class = "form-control", autofocus = "autofocus" })
            @Html.ValidationMessageFor(m => m.Topic.Name)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Topic.Description)
            @Html.TextBoxFor(m => m.Topic.Description, new { @class = "form-control", autofocus = "autofocus" })
            @Html.ValidationMessageFor(m => m.Topic.Description)
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    }


</div>


<div class="container" id="footer">
    
        @Html.ActionLink("Back to Chat Rooms List", "Index", "Home")
</div>


@section scripts{
    @Scripts.Render("/bundles/ChatRoomView")
    <script type="text/javascript">
        $(function () {
            ChatRoomController.Init();
        });
    </script>

}