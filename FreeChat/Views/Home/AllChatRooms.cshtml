
@{
    ViewBag.Title = "Free Chat";
    Layout = "~/Views/Shared/_AdminTemplate.cshtml";
}

@Styles.Render("~/bundles/allChatRoomsViewStyle")

<div class="card text-center" id="redirectPanel2">
    <div class="card-block" id="cardBlock2">
        @Html.ActionLink("Back to Main Categories", "MainCategories", "Home", null, new { @class = "btn btn-primary" })

        @Html.ActionLink("Create a room", "Create", "ChatRoom", null, new { @class = "btn btn-primary" })
    </div>
</div>
<div class="card m-5">
    <div class="card-header">
        <i class="fa fa-table"></i> Chat Rooms
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="allChatRooms" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Genre</th>
                        <th>Description</th>
                        <th>Date Expired</th>
                        <th>Go</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated @DateTime.Today.ToShortDateString()</div>
</div>


@section scripts{
    @Scripts.Render("~/bundles/allChatRoomsPartial")
    <script>
        $(function () {
            AllChatRoomsPartialController.Init();
        });
    </script>
}
